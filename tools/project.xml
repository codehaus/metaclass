<?xml version="1.0"?>
<project>
    <extend>${basedir}/../project.xml</extend>
    <name>MetaClass Tools</name>
    <artifactId>metaclass-tools</artifactId>

    <shortDescription>Provides runtime access to attributes</shortDescription>

    <description>
        MetaClass provides runtime access to attributes specified in
        javadoc format.
    </description>

    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

        <resources>
            <resource>
                <directory>${basedir}/src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>${basedir}</directory>
                <includes>
                    <include>project.xml</include>
                    <include>project.properties</include>
                </includes>
            </resource>
        </resources>

        <unitTest>
            <resource>
                <directory>${basedir}/src/test</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>

            <includes>
                <include>**/*TestCase*</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*</exclude>
            </excludes>
        </unitTest>
    </build>

    <dependencies>
        <dependency>
            <groupId>metaclass</groupId>
            <artifactId>metaclass-runtime</artifactId>
            <version>1.0-rc3</version>
        </dependency>
        <dependency>
            <id>ant</id>
            <version>1.5</version>
        </dependency>
        <dependency>
            <id>qdox</id>
            <version>1.3</version>
        </dependency>
        <dependency>
            <groupId>asm</groupId>
            <artifactId>asm</artifactId>
            <version>1.4</version>
        </dependency>
    </dependencies>

</project>
