<?xml version="1.0"?>
<project>
    <extend>${basedir}/../project.xml</extend>
    <name>MetaClass Distribution</name>
    <artifactId>metaclass</artifactId>

    <shortDescription>MetaClass Distribution component.</shortDescription>

    <description>
        The component to create a distribution of the MetaClass toolkit.
    </description>

    <dependencies>
        <dependency>
            <groupId>metaclass</groupId>
            <artifactId>metaclass-runtime</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <category>core</category>
            </properties>
        </dependency>
        <dependency>
            <groupId>metaclass</groupId>
            <artifactId>metaclass-tools</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <category>core</category>
            </properties>
        </dependency>
        <dependency>
            <groupId>maven</groupId>
            <artifactId>maven-release-plugin</artifactId>
            <version>1.2-dev</version>
            <type>plugin</type>
        </dependency>
        <dependency>
            <groupId>asm</groupId>
            <artifactId>asm</artifactId>
            <version>1.4</version>
            <properties>
                <category>shared</category>
            </properties>
        </dependency>
        <dependency>
            <id>qdox</id>
            <version>1.3</version>
            <properties>
                <category>shared</category>
            </properties>
        </dependency>
    </dependencies>

</project>
